<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eebros.asan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/NoActionBarThemeSuccess"
            android:name=".ui.activity.registration.DoneRegistrationActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.activity.registration.AddEmailActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".ui.activity.registration.AddHomeAdressActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".ui.activity.registration.AddPersonalInfoActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".ui.activity.registration.RegisterNumberActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity
            android:name=".ui.activity.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ui.activity.common.ErrorActivity"
            android:theme="@style/NoActionBarThemeError"/>
        <activity android:name=".ui.activity.registration.VerifyPhoneNumberActivity"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity android:name=".ui.activity.EnterPinActivity"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity android:name=".SplashActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>