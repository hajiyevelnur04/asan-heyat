<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.registration.NumberActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImage">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginRight="4dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"/>

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="4dp"
                android:id="@+id/itemCodeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_item_background"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/itemCodeHolder"
                    android:focusable="false"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:hint="@string/mobile_pattern"
                    android:inputType="number"
                    android:textColorHint="#8e8e8e" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/chevron_down_copy_2"
                    android:layout_width="0dp"
                    android:layout_height="25dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_marginLeft="12dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Phone number"/>

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="4dp"
                android:id="@+id/phoneNumberContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_item_background"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/phoneNumberHolder"
                    android:focusable="true"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:hint="Please enter phone number"
                    android:inputType="number"
                    android:textColorHint="#8e8e8e" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/continueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changed your phone number?"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/rounded_corners_primary"
            android:gravity="center"
            android:paddingStart="64dp"
            android:paddingTop="15dp"
            android:paddingEnd="64dp"
            android:paddingBottom="15dp"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>