    <com.skyfishjy.library.RippleBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        android:background="#b9838383"
        android:visibility="gone"
        map:rb_color="@color/white"
        map:rb_duration="3000"
        map:rb_radius="25dp"
        map:rb_rippleAmount="5"
        map:rb_scale="5.0"
        map:rb_strokeWidth="@dimen/_50sdp"
        map:rb_type="fillRipple">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/rider_ripple_bg_white"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_rider_request_driver"
            android:tint="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/btn_cancel_driver_req"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/rider_ripple_bg_white"
            android:src="@drawable/ic_close"
            android:tint="@color/colorPrimary" />

    </com.skyfishjy.library.RippleBackground>
</androidx.constraintlayout.widget.ConstraintLayout>