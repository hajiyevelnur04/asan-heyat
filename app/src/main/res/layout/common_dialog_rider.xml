<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dialog_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dialog_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_dialog_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_dialog_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_bg" />

    <ImageView
        android:id="@+id/iv_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/dialog_image_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>
